<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="#00E3E3E3"
                android:endColor="#00E6E6E6"
                android:startColor="#00C8C8C8" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:centerColor="@color/colorProgressBar"
                    android:endColor="@color/colorProgressBar"
                    android:startColor="@color/colorProgressBar" />
            </shape>
        </clip>
    </item>

</layer-list>